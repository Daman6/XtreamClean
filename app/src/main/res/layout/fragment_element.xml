<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.propertyDetailTabFraments.ElementFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/elementRecy"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/elements_item_layout"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <EditText
                android:id="@+id/searchBoxEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:background="#2E7D32"
                android:hint="Search elements"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7A7A7A"
                android:layout_below="@id/searchBoxEt" />
        </RelativeLayout>



    </FrameLayout>
</layout>