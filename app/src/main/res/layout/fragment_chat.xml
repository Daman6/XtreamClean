<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.ChatFragment">


        <!-- TODO: Update blank fragment layout -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:cardBackgroundColor="@color/white"
            android:text="@string/hello_blank_fragment">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_round_arrow_back_24"
                    android:layout_alignParentStart="true"
                    app:tint="@color/black" />


                <TextView
                    android:id="@+id/txt1"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/myriadpro_regular"
                    android:text="Xtreme clean and carpet care"
                    android:textColor="#2E7D32" />

                <TextView
                    android:id="@+id/txt2"
                    style="@style/TextAppearance.Material3.LabelLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/txt1"
                    android:fontFamily="@font/myriadpro_regular"
                    android:layout_marginTop="10dp"
                    android:text="Thankyou for being a xtreme clean user!\nPlease let us know if you have any\nquestions or feedback you'd like to share."
                    android:textColor="#515151" />

                <TextView
                    android:id="@+id/txt"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@id/txt2"
                    android:fontFamily="@font/myriadpro_regular"
                    android:layout_marginTop="20dp"
                    android:text="Back later today"
                    android:textColor="@color/black" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/white"
            android:text="@string/hello_blank_fragment">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:padding="10dp">

                <EditText
                    android:id="@+id/msgBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start conversation..." />

                <ImageView
                    android:id="@+id/textIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_text_fields_24"
                    android:layout_below="@+id/msgBox"
                    android:layout_marginTop="5dp" />

                <ImageView
                    android:id="@+id/gifIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_gif_box_24"
                    android:layout_below="@+id/msgBox"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/textIcon"
                    android:layout_marginTop="5dp" />

                <ImageView
                    android:id="@+id/galleryIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_photo_library_24"
                    android:layout_below="@+id/msgBox"
                    android:layout_toEndOf="@+id/gifIcon"
                    android:layout_marginTop="5dp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>