<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ProfileFragment">

        <LinearLayout
            android:id="@+id/notaskLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_constraintBottom_toTopOf="@+id/viewPager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/mainGreen"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_round_arrow_back_24"
                        app:tint="@color/black" />

                    <TextView
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Profile"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/saveBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Save"
                        android:textColor="#838383"
                        android:layout_marginEnd="10dp" />


                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Name"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_outline_person_24"
                    android:textColor="#676565"
                    style="@style/TextAppearance.Material3.LabelLarge" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="5dp">

                    <TextView
                        style="@style/TextAppearance.Material3.LabelMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="First"
                        android:layout_marginEnd="5dp"
                        android:textColor="#676565" />

                    <TextView
                        style="@style/TextAppearance.Material3.LabelMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Last"
                        android:textColor="#676565" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="5dp">

                    <EditText
                        style="@style/TextAppearance.Material3.LabelMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginEnd="5dp"
                        android:hint="Enter first name"
                        android:textColor="@color/black" />

                    <EditText
                        style="@style/TextAppearance.Material3.LabelMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:hint="Enter last name"
                        android:textColor="@color/black" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Contact"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_outline_person_24"
                    android:textColor="#676565"
                    style="@style/TextAppearance.Material3.LabelLarge" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="5dp">

                    <TextView
                        style="@style/TextAppearance.Material3.LabelMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Email"
                        android:layout_marginEnd="5dp"
                        android:textColor="#676565" />

                    <RelativeLayout
                        android:id="@+id/emailTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/emailText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xtrememecleanport@gmail.com"
                            android:textColor="#6C6B6B"
                            android:gravity="center"
                            style="@style/TextAppearance.Material3.LabelLarge" />

                        <ImageView
                            android:id="@+id/forwardIcon1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />


                    </RelativeLayout>

                    <TextView
                        style="@style/TextAppearance.Material3.LabelMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Mobile number"
                        android:layout_marginTop="15dp"
                        android:textColor="#676565" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp">

                        <EditText
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="start"
                            android:layout_marginEnd="5dp"
                            android:hint="Enter first name"
                            android:textColor="@color/black" />

                        <EditText
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:hint="Enter a mobile number"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <TextView
                        style="@style/TextAppearance.Material3.LabelMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Mobile number"
                        android:layout_marginTop="15dp"
                        android:textColor="#676565" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp">

                        <EditText
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:gravity="start"
                            android:layout_marginEnd="5dp"
                            android:hint="Enter first name"
                            android:textColor="@color/black" />

                        <EditText
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:hint="Enter a mobile number"
                            android:textColor="@color/black" />

                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Password"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_outline_lock_24"
                    android:textColor="#676565"
                    style="@style/TextAppearance.Material3.LabelLarge" />


                <RelativeLayout
                    android:id="@+id/updatedPasswordTxtLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/updatedPasswordTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Updated Password"
                        android:textColor="#6C6B6B"
                        android:gravity="center"
                        style="@style/TextAppearance.Material3.LabelLarge" />

                    <ImageView
                        android:id="@+id/forwardIcon2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </FrameLayout>
</layout>