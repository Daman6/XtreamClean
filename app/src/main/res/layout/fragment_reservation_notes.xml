<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ReservationNotesFragment">

        <LinearLayout
            android:id="@+id/notaskLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_constraintBottom_toTopOf="@+id/viewPager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#BCF37D"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <ImageView
                        android:id="@+id/closeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_round_close_24"
                        app:tint="@color/black" />

                    <TextView
                        style="@style/TextAppearance.Material3.LabelLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservation Notes"
                        android:layout_gravity="center"
                        android:textColor="@color/black" />


                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                app:cardMaxElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Note"
                        android:gravity="center"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/ic_outline_sticky_note_2_24"
                        android:textColor="#676565"
                        style="@style/TextAppearance.Material3.LabelLarge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checkout"
                        android:textColor="#676565"
                        style="@style/TextAppearance.Material3.LabelLarge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday,Sep 3 at 10.02 Am"
                        android:layout_marginTop="4dp"
                        android:textColor="#676565"
                        style="@style/TextAppearance.Material3.LabelLarge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guest : 3"
                        android:textColor="#676565"
                        android:layout_marginTop="4dp"
                        style="@style/TextAppearance.Material3.LabelLarge" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Reservation"
                        android:layout_marginTop="30dp"
                        android:textColor="#676565"
                        style="@style/TextAppearance.Material3.LabelLarge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday,Sep 3 at 10.02 Am at"
                        android:layout_marginTop="4dp"
                        android:textColor="#676565"
                        style="@style/TextAppearance.Material3.LabelLarge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.02 Am"
                        android:layout_marginTop="4dp"
                        android:textColor="#676565"
                        style="@style/TextAppearance.Material3.LabelLarge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guest : 3"
                        android:layout_marginTop="4dp"
                        android:textColor="#676565"
                        style="@style/TextAppearance.Material3.LabelLarge" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </FrameLayout>
</layout>