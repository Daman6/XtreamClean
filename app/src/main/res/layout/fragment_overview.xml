<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/white"
        tools:context=".ui.propertyDetailTabFraments.OverviewFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_background"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_background"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_background"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="10dp">
                        <FrameLayout
                            android:id="@+id/moreBtnLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_launcher_background"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:text="More"
                                android:background="#7F000000"
                                android:drawableTint="@color/white"
                                style="@style/TextAppearance.Material3.LabelLarge"/>
                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/BedroomsText"
                        style="@style/TextAppearance.Material3.LabelLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:drawableStart="@drawable/ic_outline_king_bed_24"
                        android:text="0"
                        android:drawablePadding="5dp"
                        android:textColor="#6C6B6B" />

                    <TextView
                        style="@style/TextAppearance.Material3.LabelLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/BedroomsText"
                        android:layout_marginTop="5dp"
                        android:text="Bedrooms"
                        android:textColor="#6C6B6B" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/BathroomText"
                        style="@style/TextAppearance.Material3.LabelLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:drawableStart="@drawable/ic_outline_bathtub_24"
                        android:text="0"
                        android:drawablePadding="5dp"
                        android:textColor="#6C6B6B" />

                    <TextView
                        style="@style/TextAppearance.Material3.LabelLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/BathroomText"
                        android:layout_marginTop="5dp"
                        android:text="Bathrooms"
                        android:textColor="#6C6B6B" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@color/black"
                style="@style/TextAppearance.Material3.TitleSmall"
                android:layout_marginTop="30dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Notes\nhsvahjaha\nhavdhvdhavd\nqdhbjqdbjqd\nqhdvhvqdhqvd\nqvdhvdqh"
                android:textColor="#878787"
                style="@style/TextAppearance.Material3.TitleSmall"
                android:layout_marginTop="10dp"/>



        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reportBtn"
            android:layout_width="290dp"
            android:layout_height="35dp"
            android:text="Report an issue"
            android:textAllCaps="false"
            android:background="#00C853"
            android:textColor="@color/white"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="40dp" />



    </FrameLayout>
</layout>