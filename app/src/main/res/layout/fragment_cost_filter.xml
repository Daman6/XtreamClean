                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/imageIcon"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="Clean"
                            android:textColor="@color/black"/>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

